// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BaseResume {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  education Json
  createdAt DateTime @default(now())
}

model RoleContext {
  id                Int      @id @default(autoincrement())
  roleName          String
  skills            String[]
  projectHighlights Json[]
  bulletPoints      String[]
}
